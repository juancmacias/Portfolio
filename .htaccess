<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # REGLA ESPECÍFICA PARA ADMIN - DEBE IR PRIMERO
  # Si la URL empieza con /admin/ NO hacer NADA más
  RewriteRule ^admin/ - [L]
  
  # REGLA ESPECÍFICA PARA API - NO REDIRIGIR
  # Si la URL empieza con /api/ NO hacer redirección www
  RewriteRule ^api/ - [L]
  
  # Manejo de preflight OPTIONS requests
  RewriteCond %{REQUEST_METHOD} OPTIONS
  RewriteRule ^(.*)$ $1 [R=200,L]
  
  # Redirección forzada de HTTP a HTTPS
  RewriteCond %{HTTPS} off
  RewriteCond %{HTTP:X-Forwarded-Proto} !https
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Redirección de www a no-www SOLO para páginas (NO para API)
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteCond %{REQUEST_URI} !^/api/
  RewriteCond %{REQUEST_URI} !^/admin/
  RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [R=301,L]
  
  # SPA fallback - redirigir todo lo demás a index.html
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteCond %{REQUEST_URI} !^/admin/
  RewriteCond %{REQUEST_URI} !^/api/
  RewriteRule . /index.html [L]
</IfModule>

