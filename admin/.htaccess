# Configuración simple para admin

# Mostrar errores PHP (solo para debug)
php_flag display_errors on
php_flag display_startup_errors on
php_value error_reporting "E_ALL"

# Desactivar cualquier redirección heredada
RewriteEngine Off

# Permitir ejecución directa de PHP
DirectoryIndex index.php

# Headers para debugging
<IfModule mod_headers.c>
    Header set X-Debug-Admin "1"
</IfModule>